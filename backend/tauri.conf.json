{
  "build": {
    "beforeDevCommand": "yarn workspace frontend dev",
    "beforeBuildCommand": "yarn workspace frontend build",
    "devPath": "http://localhost:1420",
    "distDir": "../frontend/dist"
  },
  "package": {
    "productName": "Insulator 2",
    "version": "2.12.3"
  },
  "tauri": {
    "allowlist": {
      "app": {},
      "os": {
        "all": true
      },
      "window": {
        "create": true,
        "setTitle": true,
        "setMinSize": true,
        "setFocus": true
      },
      "dialog": {
        "save": true,
        "open": true
      },
      "fs": {
        "writeFile": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "../icons/32x32.png",
        "../icons/128x128.png",
        "../icons/128x128@2x.png",
        "../icons/icon.icns",
        "../icons/icon.ico"
      ],
      "identifier": "com.insulator",
      "publisher": "Insulator",
      "longDescription": "A client UI to inspect Kafka topics, consume, produce and much more.",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "webviewInstallMode": {
          "type": "offlineInstaller"
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": ["https://github.com/andrewinci/insulator2/releases/latest/download/update-{{target}}.json"],
